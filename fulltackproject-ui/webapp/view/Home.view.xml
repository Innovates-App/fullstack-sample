<mvc:View xmlns:filterbar="sap.ui.comp.filterbar" controllerName="fulltackprojectui.controller.Home"
    xmlns:mvc="sap.ui.core.mvc" displayBlock="true"
    xmlns="sap.m"
    xmlns:fb="sap.ui.comp.filterbar"
    xmlns:core="sap.ui.core">
    <Page id="page" title="{i18n>title}">
        <content />

            <fb:FilterBar id="filterbar" search="onAvvio">
				<fb:filterGroupItems>
					<fb:FilterGroupItem name="lastname" label="Cognome" groupName="Group1" visibleInFilterBar="true">
						<fb:control>
							<MultiComboBox 
								name="lastname"
								items="{
									path: '/Users',
									templateShareable: true
								}"
							>
								<core:Item key="{ID}" text="{lastname}"/>
							</MultiComboBox>
						</fb:control>
					</fb:FilterGroupItem>
				</fb:filterGroupItems>
			</fb:FilterBar>

        <Toolbar >
            <SearchField search="onSearch" value="{home>/search}"></SearchField>
        </Toolbar>


        <Table id="Table" items="{path: '/Users', parameters:{$expand:'roles,Roles'}}">

            <columns>
                <Column >
                    <Text text="Nome"></Text>
                </Column>
                <Column >
                    <Text text="Cognome"></Text>
                </Column>
                <Column >
                    <Text text="EMail"></Text>
                </Column>
            </columns>

            <items>
                <ColumnListItem >
                    <Text  text="{firstname}"></Text>
                    <Text  text="{lastname}"></Text>
                    <Text  text="{email}"></Text>
                </ColumnListItem>
            </items>
        
        </Table>


    </Page>
</mvc:View>
